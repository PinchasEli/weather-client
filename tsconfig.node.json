{
  "extends": "@tsconfig/node18/tsconfig.json",
  "include": [
    "vite.config.*",
    "vitest.config.*",
    "cypress.config.*",
    "nightwatch.conf.*",
    "playwright.config.*"
  ],
  "compilerOptions": {
    "composite": true,
    "noEmit": true,
    "isolatedModules": true,
    "skipLibCheck": true,
    "useDefineForClassFields": true,
    "exactOptionalPropertyTypes": true,
    "verbatimModuleSyntax": false,
    "module": "ESNext",
    "moduleResolution": "Bundler",
    "types": ["node", "vite/client", "vue"]
  }
}
